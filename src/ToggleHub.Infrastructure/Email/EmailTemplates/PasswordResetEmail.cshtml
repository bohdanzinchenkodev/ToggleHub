@model ToggleHub.Application.DTOs.Identity.PasswordResetEmailDto

<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Reset your password - ToggleHub</title>
  <style>
    body {
      font-family: 'Roboto', Arial, sans-serif;
      background-color: #121212;
      margin: 0;
      padding: 20px;
      color: #e0e0e0 !important;
    }
    p, span, div {
      color: #e0e0e0 !important;
      margin: 0 0 12px 0;
    }
    strong {
      color: #ffffff !important;
    }
    a {
      color: #90caf9 !important;
      text-decoration: none;
    }
    a.button {
      text-decoration: none !important;
      display: inline-block;
      padding: 12px 28px;
      margin: 6px;
      border-radius: 6px;
      font-weight: 500;
      font-size: 14px;
      background: #6366F1;
      color: #ffffff !important;
    }
    .container {
      max-width: 600px;
      margin: 0 auto;
      background: #1e1e1e;
      border-radius: 8px;
      overflow: hidden;
      box-shadow: 0 2px 8px rgba(0,0,0,0.5);
    }
    .header {
      background: #1e1e1e;
      color: #ffffff;
      padding: 20px;
      text-align: center;
      font-size: 20px;
      font-weight: 600;
      border-bottom: 1px solid #2c2c2c;
    }
    .content {
      padding: 30px;
      font-size: 15px;
      line-height: 1.6;
    }
    .button-container {
      text-align: center;
      margin: 30px 0;
    }
    .footer {
      background: #1e1e1e;
      color: #9e9e9e;
      font-size: 12px;
      text-align: center;
      padding: 15px;
      border-top: 1px solid #2c2c2c;
    }
    .warning {
      background: #2d1b00;
      border: 1px solid #5d3a00;
      border-radius: 4px;
      padding: 15px;
      margin: 20px 0;
      color: #ffb74d !important;
    }
  </style>
</head>
<body>
  <div class="container">
    <div class="header">
      Password Reset Request
    </div>
    <div class="content">
      <p>Hello @Model.UserName,</p>
      <p>
        We received a request to reset your password for your <strong>ToggleHub</strong> account.
      </p>

      <div class="button-container">
        <a href="@Model.ResetLink" class="button">Reset Password</a>
      </div>

      <p>
        This password reset link will expire on <strong>@Model.ExpiresAt.ToString("MMMM dd, yyyy 'at' HH:mm UTC")</strong>.
      </p>

      <div class="warning">
        <p><strong>Security Notice:</strong></p>
        <p>If you did not request a password reset, please ignore this email. Your account remains secure and no changes have been made.</p>
      </div>

      <p>For security reasons, this link can only be used once. If you need to reset your password again, please submit a new request.</p>
    </div>
    <div class="footer">
      <p>You are receiving this email because a password reset was requested for your ToggleHub account.</p>
      <p>&copy; @DateTime.UtcNow.Year ToggleHub â€¢ <a href="https://toggle-hub.com">toggle-hub.com</a></p>
    </div>
  </div>
</body>
</html>
